// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserRoles {
  PUBLISHER
  ADVERTISER
}

model User {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  company_name     String?
  company_category String?
  company_type     String?
  website          String?
  sui_address      String?    @unique
  evm_address      String?
  role             UserRoles?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  campaigns Campaign[]
  ApiKeys   ApiKeys?
}

model Campaign {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  views     Int      @default(0)
  clicks    Int      @default(0)
  budget    Float
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  advertisementId String? @unique @db.ObjectId

  userId String? @db.ObjectId
  User   User?   @relation(fields: [userId], references: [id])

  campaignTopicsIds String?         @db.ObjectId
  CampaignTopicsIds CampaignTopics? @relation(fields: [campaignTopicsIds], references: [id])
  Advertisement     Advertisement[]
}

model ApiKeys {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  campaignTopics String?         @db.ObjectId
  CampaignTopics CampaignTopics? @relation(fields: [campaignTopics], references: [id])
}

model CampaignTopics {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String     @unique
  totalView  Int        @default(0)
  totalClick Int        @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  ApiKeys    ApiKeys[]
  Campaign   Campaign[]
}

model Advertisement {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  link        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Campaign    Campaign? @relation(fields: [campaignId], references: [id])
  userId      String?   @db.ObjectId
  campaignId  String?   @db.ObjectId
}
