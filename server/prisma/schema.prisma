generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserRoles {
  PUBLISHER
  ADVERTISER
}

model User {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  company_name     String?
  company_category String?
  company_type     String?
  website          String?
  sui_address      String?    @unique
  evm_address      String?
  role             UserRoles?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}